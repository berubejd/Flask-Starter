{% extends 'layout.j2' %}
{% from "_helpers.j2" import render_field, render_submit_field %}

{% set active_page = "profile" %}

{% block title %}Merge Accounts{% endblock %}

{% block content %}
    <div class="text-center w-75 m-auto">
        <h1 id="title" class="text-center mb-4">Merge Account</h1>
        <p class="lead">If you want to merge another account into this one, log in to that account here.</p>
        <p class="p-3"><strong>That account must have a password set.</strong></p>
    </div>
    <div class="auth-container text-center m-auto">
        <form method="POST">
            {{ form.hidden_tag() }}
            {{ render_field(form.username, label_visible=false, placeholder=form.username.label.text, autofocus="autofocus") }}
            {{ render_field(form.password, label_visible=false, placeholder=form.password.label.text) }}
            {{ render_submit_field(form.submit, label="Merge Account") }}
        </form>
        <p class="lead pt-3">Warning:  All of the content of that account will be transferred to this account and then that account will be deleted!</p>
</div>
{% endblock %}